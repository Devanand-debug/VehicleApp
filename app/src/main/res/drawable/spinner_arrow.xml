<!-- res/drawable/spinner_background.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background color or drawable -->
    <item>
        <shape android:shape="rectangle">
            <stroke
                android:width="1dp"  android:color="@color/border_color"  />
            <solid android:color="@android:color/transparent" />
            <corners android:radius="4dp" />
        </shape>
    </item>

    <!-- Arrow icon -->
    <item android:right="8dp" android:gravity="center_vertical|right">
        <bitmap
            android:src="@android:drawable/arrow_down_float"
            android:tint="@color/border_color"
            android:gravity="center" />
    </item>
</layer-list>